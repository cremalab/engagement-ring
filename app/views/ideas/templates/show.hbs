<div class="ideaGrid">
  <div class="ideaAuthor">
    <img class="avatar" src="images/headshot.jpg" alt="">
    {{ displayName user }}
  </div>
  <div class="ideaInfo">
    <h2 class="ideaTitle">{{ title }} {{#if when}}<span class="ideaTitleWhen">â€” {{#timely}}{{ when }}{{/timely}}</span>{{/if}}</h2>
    {{#if description}}<p  class="ideaDescription">{{ description }}</p>{{/if}}
  </div>
  <div class="ideaAction">
    <button class='vote' data-bind='total_votes'>{{ total_votes }}</button>
    {{!-- <div class="votes"></div> --}}
  </div>
</div>
{{#hasPermission user.id}}
<div class="ideaControl">
  <button class='plain edit'   ></button>
  <button class='plain destroy'></button>
</div>
{{/hasPermission}}
